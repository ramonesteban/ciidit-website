<% if signed_in? && (is_admin? || (@user.id == current_user.id))%>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h2>Cambiar contraseña</h2>

      <% if !notice.nil? %>
        <div class="alert alert-danger">
          <%= notice %>
        </div>
      <% end %>

      <%= form_for(@user) do |f| %>
        <div class="input-group">
          <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Contraseña nueva' %>
        </div>
        <div class="input-group">
          <span class="input-group-addon"><span class="glyphicon glyphicon-ok"></span></span>
          <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Confirmar contraseña' %>
        </div>

        <%= f.submit 'Cambiar contraseña', class: 'btn btn-lg btn-primary btn-block' %>
        <% if is_admin? %>
        <%= link_to 'Cancelar', users_path, class: 'btn btn-lg btn-danger btn-block' %>
        <% else %>
        <%= link_to 'Cancelar', settings_path, class: 'btn btn-lg btn-danger btn-block' %>
        <% end %>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h3>No tienes permiso para ver esta página.</h3>
    </div>
  </div>
<% end %>

